generator client {
  provider      = "prisma-client-js"
  engineType    = "library" // Node-API engines reduce OpenSSL mismatches
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  firstName String
  lastName  String
  createdAt DateTime @default(now())

  // Updated relations matching the two on Post
  postsById       Post[] @relation("authorId")
  postsByUsername Post[] @relation("authorUsername")

  followers      Follow[]  @relation("followedBy")
  following      Follow[]  @relation("following")
  followersCount Int       @default(0)
  followingCount Int       @default(0)
  comments       Comment[] @relation("authorId")
  likes          Like[]    @relation("likerId")
}

model Post {
  id             String    @id @default(uuid())
  title          String
  content        String
  createdAt      DateTime  @default(now())
  userId         String
  authorId       User      @relation("authorId", fields: [userId], references: [id], onDelete: Cascade)
  authorUsername User      @relation("authorUsername", fields: [posterUsername], references: [username], onDelete: Cascade)
  posterUsername String
  commentCount   Int       @default(0)
  comments       Comment[] @relation("postId")
  likeCount      Int       @default(0)
  likes          Like[]    @relation("postId")
}

model Follow {
  id               String @id @default(uuid())
  follower         User   @relation("followedBy", fields: [followerId], references: [id], onDelete: Cascade)
  followerId       String
  personFollowed   User   @relation("following", fields: [personFollowedId], references: [id], onDelete: Cascade)
  personFollowedId String
}

model Comment {
  id          String @id @default(uuid())
  content     String
  commenterId String
  authorId    User   @relation("authorId", fields: [commenterId], references: [id], onDelete: Cascade)
  postId      String
  postIdRel   Post   @relation("postId", fields: [postId], references: [id])
}

model Like {
  id         String  @id @default(uuid())
  liked      Boolean
  likerId    String
  likerIdRel User    @relation("likerId", fields: [likerId], references: [id], onDelete: Cascade)
  postId     String
  postIdRel  Post    @relation("postId", fields: [postId], references: [id])
}
